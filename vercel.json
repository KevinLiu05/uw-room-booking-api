{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/api/index.js" }
  ]
}

{
  "version": 2,
  "routes": [
    { "src": "/", "dest": "/api/index.js" },
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ]
}